/* mini/pages/doctor/doctorDetail/doctorDetail.wxss */
page{
  display: flex;
  flex-direction: column;
  background: #eee;
  }
  .doc-head{
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
  background: white;
  }
  .doc-head image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  }
  .doc-head-center{
  display: flex;
  flex-direction: column;
  margin: 0 20rpx;
  }
  .hospital-property text{
  padding: 0 5rpx;
  }
  .hospital-grade{
  background: rgb(246, 219, 206);
  text-align: center;
  width: 100rpx;
  border-radius: 10rpx;
  }
  .doctor-post{
  color: rgb(180, 180, 180);
  margin-left: 20rpx;
  font-size: 20rpx;
  }
  .doc-talk{
  display: flex;
  /* justify-content: center; */
  align-items: center;
  }
  .talk-sum{
  color: rgb(246, 219, 200);
  }
  
  .doc-body{
  background: white;
  width: 750rpx;
  margin-top: 20rpx;
  }
  .doc-body-title{
  padding: 20rpx;
  border-bottom: 1rpx solid silver;
  }
  .doc-foot{
  margin-top: 20rpx;
  background: white;
  }
  .doc-foot-head{
  padding: 20rpx;
  border-bottom: 1rpx solid silver;
  display: flex;
  justify-content: space-between;
  
  }
  .doc-foo-head-a{
  color: rgb(180, 180, 180)
  }
  .user-says{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  align-items: center;
  }
  .user-says-title{
  display: flex;
  }
  .name{
  margin-right: 10rpx;
  }
  .time{
  margin-right: 10rpx;
  }
  .user-says-item{
  margin: 0 20rpx;
  width: 700rpx;
  /* background: greenyellow; */
  color: rgb(180, 180, 180);
  font-size: 25rpx;
  }